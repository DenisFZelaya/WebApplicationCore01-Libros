@model WebApplicationCore01.Models.Libro
@{
    ViewData["Title"] = "Eliminar Libro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Libro</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar un libro</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="POST" asp-action="DeleteLibro">

                <input type="hidden" asp-for="Id"/>

                <div asp-validation-summary="ModelOnly" class="control-label"></div>

                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" disabled />
                    <span asp-validation-for="Titulo" class="bg-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" disabled/>
                    <span asp-validation-for="Descripcion" class="bg-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaLanzamiento" class="control-label"></label>
                    <input asp-for="FechaLanzamiento" class="form-control" disabled/>
                    <span asp-validation-for="FechaLanzamiento" class="bg-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Autor" class="control-label"></label>
                    <input asp-for="Autor" class="form-control"disabled />
                    <span asp-validation-for="Autor" class="bg-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" disabled/>
                    <span asp-validation-for="Precio" class="bg-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Eliminar Libro" class="btn btn-primary d-block" />
                </div>


            </form>
        </div>
    </div>


  </div>

@section Scripts {
@{ <partial name="_ValidationScriptsPartial.cshtml" />}
}
